<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.franciscoandrade.recyclerview.MainActivity"
    >

    <android.support.v7.widget.RecyclerView
        android:background="@color/black_bkg"
        android:id="@+id/movie_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintVertical_weight="1"
        />


    <android.support.v7.widget.RecyclerView
        android:background="@color/blue_bkg"
        android:id="@+id/movie_recyclerview2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintVertical_weight="1"
        app:layout_constraintTop_toBottomOf="@id/movie_recyclerview"/>

</android.support.constraint.ConstraintLayout>
